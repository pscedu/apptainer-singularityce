Bootstrap: docker
From: debian:latest

%labels
   AUTHOR icaoberg
   EMAIL icaoberg@psc.edu
   SUPPORT help@psc.edu
   REPOSITORY http://gitub.com/pscedu/apptainer-singularityce
   COPYRIGHT Copyright Â© 2021-2024 Pittsburgh Supercomputing Center. All Rights Reserved.  
   VERSION 4.1.2

%environment
    export GOPATH=/usr/local/go
    export PATH=/usr/local/go/bin:${PATH}:${GOPATH}/bin

%post
   apt-get update
   apt-get install -y \
     autoconf \
     automake \
     make \
     cryptsetup \
     fuse \
     fuse2fs \
     git \
     libfuse-dev \
     libglib2.0-dev \
     libseccomp-dev \
     libtool \
     pkg-config \
     runc \
     squashfs-tools \
     squashfs-tools-ng \
     uidmap \
     wget \
     zlib1g-dev

     export VERSION=1.22.1 OS=linux ARCH=amd64 && \
     wget https://dl.google.com/go/go$VERSION.$OS-$ARCH.tar.gz && \
     tar -C /usr/local -xzvf go$VERSION.$OS-$ARCH.tar.gz && \
     rm go$VERSION.$OS-$ARCH.tar.gz

     cd /opt/
     git clone --recurse-submodules https://github.com/sylabs/singularity.git
     cd singularity
     git checkout --recurse-submodules v4.1.2

     export GOPATH=/usr/local/go
     export PATH=/usr/local/go/bin:${PATH}:${GOPATH}/bin

     ./mconfig && \
        make -C ./builddir && \
        make -C ./builddir install

%runscript
     /usr/local/bin/singularity "$@"
